{% extends 'base.html.twig' %}

{% block title %}e_Web_Game{% endblock %}

{% block body %}
	<div class="container">
	<h1 class="my-4">Choix de la console</h1>
		<div class="row mt-5 gy-3">
			{% for category in categories %}
				<div class="col-lg-4 col-md-6 col-12">
					<div class="card ">
						<img class="card-img-top" src="https://picsum.photos/398/224" alt="Card image cap">
						<div class="card-body bg-black">
							<p class="card-text txt">{{ category.description }}</p>
							<a href="{{ path("app_products", { genre: categorieParent.id, console: category.id }) }}" class="btn btn-primary mt-0 mb-3 mx-auto">{{ category.name }}</a>
						</div>
					</div>
				</div>
			{% endfor %}
		</div>
	</div>
{% endblock %}
