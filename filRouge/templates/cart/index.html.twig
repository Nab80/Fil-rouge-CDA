{% extends 'base.html.twig' %}

{% block title %}Cart{% endblock %}

{% block body %}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet">
<main id="cart" style="max-width:960px">
  <h1>Your Cart</h1>
  <div class="container-fluid">
    <div class="row align-items-start">
      <div class="col-12 col-sm-8 items">
      
        <!--1-->
        
          {% for product in cart %}
            <div class="cartItem row align-items-start">
          <div class="col-3 mb-2">
            <img class="w-100" src="https://dummyimage.com/600x400/000/fff" alt="art image">
          </div>
            <div class="col-5 mb-2">
            <h6 class="">{{product.name}}</h6>
          </div>
          <div class="col-2">
            <p class="cartItemQuantity p-1 text-center">1</p>
          </div>
          <div class="col-2">
            <p id="cartItem1Price">{{product.price}}</p>
          </div>
        </div>
        <hr>
          {% endfor %}
          
      </div>
      <div class="col-12 col-sm-4 p-3 proceed form">
        <div class="row m-0">
        <hr>
        <div class="row mx-0 mb-2">
          <div class="col-sm-8 p-0 d-inline">
            <h5>Total</h5>
          </div>
          <div class="col-sm-4 p-0">
            <p id="total"></p>
          </div>
        </div>
        <a href="#"><button id="btn-checkout" class="shopnow"><span>Checkout</span></button></a>
      </div>
    </div>
  </div>
  </div>
</main>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js"></script>


</div>
{% endblock %}

