{% extends 'base.html.twig' %}

{% block title %}{{ product.name }} - eWebproduct Store{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-6">
            <img src="{{ product.image }}" alt="{{ product.name }}" class="img-fluid">
        </div>
        <div class="col-md-6">
            <h1>{{ product.name }}</h1>
            <p class="lead">{{ product.description }}</p>
            <ul>
                <li>Genre: {{ product.genre }}</li>
                <li>Developer: {{ product.developer }}</li>
                <li>Publisher: {{ product.publisher }}</li>
                <li>Release Date: {{ product.release_date|date('m, d, y') }}</li>
                <li>Metascore: {{ product.metascore }}</li>
            </ul>
            <h2>Gameplay</h2>
            <p>{{ product.gameplay }}</p>
            <h2>Visuals and Sound</h2>
            <p>{{ product.visuals_sound }}</p>
            <h2>Platform and Compatibility</h2>
            <p>{{ product.platform_compatibility }}</p>
            <h2>Price and Availability</h2>
            <p>{{ product.price }}</p>
            <a href="{{ path('cart_add', { 'id': product.id }) }}" class="btn btn-primary">Add to Cart</a>
        </div>
    </div>
{% endblock %}
